@model TracNghiem.Models.MucDoKho

@{
    ViewBag.Controller = "Mức độ";
    ViewBag.Title = "Chi tiết mức độ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <dl class="dl-horizontal">
        <dt>
            Mức độ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenMucDo)
        </dd>

    </dl>
</div>
<p>
