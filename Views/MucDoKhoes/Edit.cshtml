@model TracNghiem.Models.MucDoKho

@{
    ViewBag.Controller = "Mức độ";
    ViewBag.Title = "Cập nhật mức độ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal fw-bold">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            Mức độ
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenMucDo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenMucDo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <button type="submit" class="btn btn-success" style="margin: 10px 5px 10px 0px;">
                    <i class="fas fa-save"></i>
                    <span>
                        <strong>Lưu cập nhật</strong>
                    </span>
                </button>

                <a href="@Url.Action("Index", "MucDoKhoes")" class="btn btn-primary" style="margin: 5px 5px;">
                    <i class="fas fa-list"></i>
                    <span>
                        <strong>Danh sách</strong>
                    </span>
                </a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
