@model IEnumerable<TracNghiem.Models.MonHoc>

@{
    ViewBag.Controller = "Môn học";
    ViewBag.Title = "Danh sách môn học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <p>
        <a href="@Url.Action("Create", "MonHocs")" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            <span>
                <strong>Thêm mới môn học</strong>
            </span>
        </a>
    </p>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Môn học
                </th>
                <th>
                    Khối/lớp
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenMonHocs)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Khois.TenKhoi)
                    </td>
                    <td class="col-sm-3">
                        <a href="@Url.Action("Details", "MonHocs", new {id = item.id })" class="btn btn-primary btn-sm" style="margin: 0px 5px;">
                            <i class="fas fa-info"></i>
                            <span>
                                Chi tiết
                            </span>
                        </a>

                        <a href="@Url.Action("Edit", "MonHocs", new {id = item.id })" class="btn btn-warning btn-sm" style="margin: 0px 5px;">
                            <i class="fas fa-edit"></i>
                            <span>
                                Sửa
                            </span>
                        </a>

                        <a href="@Url.Action("Delete", "MonHocs", new {id = item.id })" class="btn btn-danger btn-sm" style="margin: 0px 5px;">
                            <i class="fas fa-trash"></i>
                            <span>
                                Xóa
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
