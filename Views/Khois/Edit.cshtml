@model TracNghiem.Models.Khois

@{
    ViewBag.Controller = "Khối/lớp";
    ViewBag.Title = "Cập nhật thông tin khối/lớp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal fw-bold">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        Khối/lớp
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenKhoi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenKhoi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Meta, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Meta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Meta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            <button type="submit" class="btn btn-success" style="margin: 10px 5px 10px 0px;">
                <i class="fas fa-save"></i>
                <span>
                    <strong>Lưu cập nhật</strong>
                </span>
            </button>

            <a href="@Url.Action("Index", "Khois")" class="btn btn-primary" style="margin: 5px 5px;">
                <i class="fas fa-list"></i>
                <span>
                    <strong>Danh sách</strong>
                </span>
            </a>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
