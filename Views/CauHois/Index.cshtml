@model IEnumerable<TracNghiem.Models.CauHois>

@{
    ViewBag.Controller = "Câu hỏi";
    ViewBag.Title = "Danh sách câu hỏi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <p>
        <a href="@Url.Action("Create", "CauHois")" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            <span>
                <strong>Thêm mới câu hỏi</strong>
            </span>
        </a>
    </p>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="col-sm-2">
                    Môn học
                </th>
                <th class="col-sm-1">
                    Mức độ
                </th>
                <th class="col-sm-6">
                    Câu hỏi
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-sm-2">
                        @Html.DisplayFor(modelItem => item.MonHoc.TenMonHocs)
                    </td>
                    <td class="col-sm-1">
                        @Html.DisplayFor(modelItem => item.MucDoKho.TenMucDo)
                    </td>
                    <td class="fw-bold col-sm-6">
                        @Html.DisplayFor(modelItem => item.Cauhoi)
                    </td>
                    <td class="col-sm-3">

                        <a href="@Url.Action("Details", "CauHois", new {id = item.Id })" class="btn btn-primary btn-sm" style="margin: 0px 5px;">
                            <i class="fas fa-info"></i>
                             <span>
                                 Chi tiết
                              </span>
                        </a>

                        <a href="@Url.Action("Edit", "CauHois", new {id = item.Id })" class="btn btn-warning btn-sm" style="margin: 0px 5px;">
                            <i class="fas fa-edit"></i>
                            <span>
                                Sửa
                            </span>
                        </a>

                        <a href="@Url.Action("Delete", "CauHois", new {id = item.Id })" class="btn btn-danger btn-sm" style="margin: 0px 5px;">
                            <i class="fas fa-trash"></i>
                            <span>
                                Xóa
                            </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
